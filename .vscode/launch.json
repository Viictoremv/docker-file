{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest.js App",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "start:debug"],
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}"
        }
    ]
}